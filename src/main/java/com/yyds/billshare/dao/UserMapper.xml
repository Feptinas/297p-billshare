<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yyds.billshare.dao.UserMapper">
    <insert id="insertUser" parameterType="User">
        insert into BillShare.user (uid, username, password, email, avatar) values (#{uid},#{username},#{password},#{email},#{avatar})
    </insert>

<!--    <select id="queryUserById"-->
    <select id="queryAllUsers" resultType="User">
        select * from BillShare.user;
    </select>
</mapper>